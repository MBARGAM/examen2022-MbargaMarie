        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
           <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-primary bg-primary">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link text-white" href="{{ path('accueil') }}">Home <span class="sr-only">Accueil</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('listeDesGenres') }}">Les Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('addChansons') }}">Ajouter une chanson </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('genres') }}">Ajouter un genre </a>
                        </li>

                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}
        {% endblock %}
    </body>
</html>
